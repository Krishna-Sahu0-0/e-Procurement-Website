# MongoDB Connection String
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database_name

# Server Port
PORT=5000

# JWT Secret Key (Generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Instructions:
# 1. Copy this file and rename it to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit the .env file to GitHub
# 4. Generate a strong JWT_SECRET using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
